//LOot houses
#include<bits/stdc++.h>
#include <iostream>
using namespace std;
int getMaxMoney(int arr[], int n)
{
    int *answer=new int[n+1];
    answer[0]=0;
    for(int i=1;i<=n;i++)
    {
        answer[i]=max(answer[i-1],arr[n-i]+answer[i-2]);
    }
    return answer[n];
}
int main() 
{
    int n;
    cin>>n;
    int *arr=new int[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<getMaxMoney(arr,n);
}
