#include <iostream>
#include<bits/stdc++.h>
using namespace std;
 int lis(int arr[], int n) 
 {	
     //Brute force		
    if(n==0)
    {
        return 0;
    }
    int a,b;
    int i=0;
    //if take an element then other element that should be included shall be greater then the taken element.
    while(arr[i]>arr[i+1]&&i<n-1)
    {
        i++; 
    }
     i++;
     //Take that element
    a=1+lis(arr+i,n-i);
     //Not take that element
    b=lis(arr+1,n-1);
     return max(a,b);
 }
int main() {
    int n;
    cin>>n;
    int *arr=new int[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<lis(arr,n);
}
